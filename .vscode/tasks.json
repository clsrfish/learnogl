{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cd build && cmake -Wdev ../ && make"
        },
        {
            "label": "dependencies",
            "type": "shell",
            "command": "sh dependencies.sh"
        },
        {
            "label": "cpack",
            "type": "shell",
            "command": "cd build && cmake ../ && cpack --config CPackConfig.cmake"
        }
    ]
}